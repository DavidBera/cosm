<section {{#if id}}id="{{id}}"{{/if}} style="background-image: url('{{background}}');" class="contact-form {{#classes}}{{this}} {{/classes}}">
    <div class="overlay"></div>
    <div class="container">
        <div class="header-content">
            <div class="header-content-inner">
                <div class="row">
                    <div class="col-sm-6">
                        <div class="col-xs-12">
                            {{#if title}}<h1>{{__ title}}</h1>{{/if}}
                            {{#if description}}<p>{{__ description}}</p>{{/if}}
                        </div>
                        <form id="feedback-form" class="form-horizontal col-xs-12">
                            <fieldset>
                                <div class="form-group">
                                    <div>
                                        <div class="form-group">
                                            <div class="col-xs-12 col-sm-6">
                                                <input type="text" class="form-control" id="name"
                                                       placeholder="{{__ form.placeholders.name}}">
                                                <span class="error-message">{{__ "Name can not contain less than two characters"}}</span>
                                            </div>
                                            <div class="col-xs-12 col-sm-6">
                                                <input type="text" class="form-control" id="phone"
                                                       placeholder="{{__ form.placeholders.phone}}" >
                                                <span class="error-message">{{__ "Enter a valid phone number"}}</span>
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <div class="col-lg-12">
                                                <input type="email" class="form-control" id="email"
                                                       placeholder="{{__ form.placeholders.email}}">
                                                <span class="error-message">{{__ "Enter a valid email address"}}</span>
                                            </div>
                                        </div>
                                    </div>

                                    <div>
                                        <div class="form-group">
                                            <div class="col-xs-12">
        <textarea class="form-control" rows="3" id="message"
                  placeholder="{{__ form.placeholders.message}}" data-error-message="error in message"></textarea>
                                                <span class="error-message">{{__ "Message can not contain less than 10 characters"}}</span>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                                <div class="form-group">
                                    <div class="text-center">
                                        <a id="sendFeedback" href="{{btn.url}}"
                                           class="btn btn-outline btn-xl btn-block">{{__ btn.text}}</a>
                                    </div>
                                </div>
                            </fieldset>
                        </form>
                    </div>
                    <div class="col-sm-6">
                        {{#if office}}
                            <div class="col-xs-12 col-sm-12 col-md-12">
                                <div class="office">
                                    <h2>{{__ office.address}}</h2>
                                    <h3>{{__ office.city}}, {{__ office.country}} <a href="{{pageScroll.href}}"
                                                                                     class="page-scroll"><i
                                            class="fa fa-map-o" aria-hidden="true"></i></a></h3>
                                    {{#each office.info}}
                                        <p class="text-muted">{{@key}}: {{this}}</p>
                                    {{/each}}
                                </div>
                            </div>
                        {{/if}}
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>