<div class="modal fade" id="add-menu-item" tabindex="-1" role="dialog" aria-labelledby=""
     aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <!-- Modal Header -->
            <div class="modal-header">
                <button type="button" class="close"
                        data-dismiss="modal">
                    <span aria-hidden="true"><i class="fa fa-window-close" aria-hidden="true"></i></span>
                    <span class="sr-only">{{__ 'Close'}}</span>
                </button>
                <h4 class="modal-title">
                    {{__ 'Add menu item'}}
                </h4>
            </div>

            <!-- Modal Body -->
            <div class="modal-body">
                <form class="form-horizontal" role="form">
                    <div class="form-group col-sm-6">
                        <label  class="col-sm-12 control-label text-left"
                                for="inputEmail3">{{__ 'Link'}}</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" data-placement="bottom"
                                   id="link" placeholder="{{__ 'Link'}}"/>
                        </div>
                    </div>
                    <div class="form-group col-sm-6">
                        <label class="col-sm-12 control-label text-left"
                               for="inputPassword3" >{{__ 'Text'}}</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" data-placement="bottom"
                                   id="text" placeholder="{{__ 'Text'}}"/>
                        </div>
                    </div>
                </form>
            </div>

            <!-- Modal Footer -->
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">{{__ 'Cancel'}}</button>
                <a class="btn btn-primary btn-ok" id="save">{{__ 'Save'}}</a>
            </div>
        </div>
    </div>
</div>