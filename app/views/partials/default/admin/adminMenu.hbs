<div class="col-md-3 left_col">
    <div class="left_col scroll-view">
        <div class="navbar nav_title" style="border: 0;">
            <a href="/" class="site_title"><i class="fa fa-eercast"></i> <span>COSM</span></a>
        </div>

        <div class="clearfix"></div>

        <br/>

        <!-- sidebar menu -->
        <div id="sidebar-menu" class="main_menu_side hidden-print main_menu">

            {{#adminMenuSections}}
                <div class="menu_section">
                    <h3>{{{__ text}}}</h3>
                    {{#menus}}
                        <ul class="nav side-menu">
                            <li>
                                <a {{#unless children.length}}href="{{href}}"{{/unless }} >
                                    <i {{#if class}}class="{{class}}"{{/if}}></i> {{{__ text}}}
                                    {{#if children.length}}
                                        <span class="fa fa-chevron-down"></span>
                                    {{/if}}
                                </a>
                                {{#if children.length}}
                                    <ul class="nav child_menu">
                                        {{# children}}
                                            <li><a href="{{href}}">{{{__ text}}}</a></li>
                                        {{/children}}
                                    </ul>
                                {{/if}}
                            </li>
                        </ul>
                    {{/menus}}
                </div>
            {{/adminMenuSections}}
        </div>
    </div>
</div>

<!-- top navigation -->
<div class="top_nav">
    <div class="nav_menu">
        <nav>
            <div class="nav toggle">
                <a id="menu_toggle"><i class="fa fa-bars"></i></a>
            </div>

            <ul class="nav navbar-nav navbar-right">
                <li class="">
                    <a href="" id="user-profile" class="user-profile dropdown-toggle" data-toggle="dropdown"
                       aria-expanded="false">
                        <i class="fa fa-envelope user-profile__notify"></i>
                        {{user.login}}
                        <span class=" fa fa-angle-down"></span>
                    </a>


                    <ul class="dropdown-menu dropdown-usermenu pull-right">
                        <li id="user-profile__feedbacks"><a href=""><span class="badge bg-blue pull-right"></span>Feedbacks</a>
                        </li>
                        <li><a href="/logout"><i class="fa fa-sign-out pull-right"></i> Log Out</a></li>
                    </ul>
                </li>
            </ul>
        </nav>
    </div>
</div>
<!-- /top navigation -->