<div id="menus">
    {{> pagination page=page pages=pages num=5}}
    <table class="table table-hover table-responsive">
        <tbody>
        <thead>
        <tr>
            <th>{{__ 'Link'}}</th>
            <th>{{__ 'Text'}}</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {{#each docs}}
            <tr id="{{_id}}">
                <td><input class="output" data-toggle="tooltip" data-placement="bottom" name="href" value="{{href}}">
                </td>
                <td><input class="output" data-toggle="tooltip" data-placement="bottom" name="text" value="{{text}}">
                </td>
                <td class="menu-actions col-md-1">
                    <a href="#" onclick="return false;" data-toggle="modal" data-target="#confirm-save"
                       data-action="save-menu-item" data-self-link="{{_links.self}}"
                       data-id="{{_id}}" class="btn btn-info btn-lg"><i
                            class="fa fa-floppy-o"></i></a><a href="#" onclick="return false;" data-toggle="modal"
                                                              data-target="#confirm-delete"
                                                              data-action="delete-menu-item"
                                                              data-self-link="{{_links.self}}"
                                                              data-id="{{_id}}" class="btn btn-danger btn-lg"><i
                        class="fa fa-trash-o"></i></a>

                </td>
            </tr>
        {{/each}}
        </tbody>
    </table>
    {{> pagination page=page pages=pages num=5}}
</div>

