<div id="feedbacks">
    {{> pagination page=page pages=pages num=5}}
    <table class="table table-hover">
        <thead>
        <tr>
            <th>{{__ 'Name'}}</th>
            <th>{{__ 'Email'}}</th>
            <th>{{__ 'Message'}}</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {{#each docs}}
            <tr id="{{_id}}" {{#if_eq status 'NEW'}}{{else}}class="active"{{/if_eq}}>
                <td>{{name}}</td>
                <td>{{email}}</td>
                <td>{{shortMessage}}</td>
                <td class="menu-actions col-md-1">
                    <a href="#" onclick="return false;"
                       data-action="open-feedback"
                       data-id="{{_id}}"
                       data-self-link="{{_links.self}}"
                       data-status="{{status}}" class="btn btn-success btn-md"><i class="fa fa-eye"
                                                                                  aria-hidden="true"></i>
                    </a><a href="#" onclick="return false;" data-toggle="modal" data-target="#confirm-delete"
                       data-action="delete-feedback" data-self-link="{{_links.self}}"
                       data-id="{{_id}}" class="btn btn-danger btn-md"><i
                            class="fa fa-trash-o"></i></a>
                </td>
            </tr>
        {{/each}}
        </tbody>
    </table>
    {{> pagination page=page pages=pages num=5}}
</div>